{
	"name": "live-reload-server",
	"version": "0.2.0-alpha.1",
	"description": "Small static HTTP server with live reloading",
	"main": "./dist/index.min.js",
	"bin": {
		"live-reload-server": "dist/index.min.js"
	},
	"type": "module",
	"scripts": {
		"build": "rollup --config",
		"prestart": "npm run build",
		"start": "node dist/index.js -i sample -p 2000",
		"test": "ava"
	},
	"ava": {
		"extensions": {
			"ts": "module"
		},
		"nonSemVerExperiments": {
			"configurableModuleFormat": true
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/feljx/live-reload-server.git"
	},
	"keywords": [
		"live",
		"reload",
		"server",
		"static",
		"http",
		"dev",
		"web",
		"small",
		"mini"
	],
	"author": "feljx",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/feljx/live-reload-server/issues"
	},
	"homepage": "https://github.com/feljx/live-reload-server#readme",
	"dependencies": {
		"chokidar": "^3.5.1",
		"express": "^4.17.1",
		"mime": "^2.5.2",
		"ws": "^7.4.5"
	},
	"devDependencies": {
		"@rollup/plugin-typescript": "^8.2.1",
		"@types/express": "^4.17.11",
		"@types/node": "^15.3.0",
		"@types/ws": "^7.4.4",
		"ava": "^3.15.0",
		"npm-check": "^5.9.2",
		"rollup": "^2.48.0",
		"rollup-plugin-terser": "^7.0.2",
		"ts-node": "^9.1.1",
		"tslib": "^2.2.0",
		"typescript": "^4.2.4"
	}
}
